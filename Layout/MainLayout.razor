@inherits LayoutComponentBase

<div class="main-layout">
    <header class="topbar">
        <h1>FK Platform</h1>
        <nav>
            <a href="/home">Home</a>
            <a href="/login">Logout</a>
        </nav>
    </header>

    <div class="body-content">
        @Body
    </div>

    <footer class="footer">
        <p>© 2025 FK Department - Where Quality Meets Precision</p>
    </footer>
</div>

<style>
    .main-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #121212;
        color: #fff;
    }

    .topbar {
        background-color: #e10600;
        padding: 15px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.5);
    }

        .topbar h1 {
            margin: 0;
            font-weight: 900;
            font-size: 28px;
            color: white;
            user-select: none;
        }

        .topbar nav a {
            color: white;
            margin-left: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: color 0.3s ease;
        }

            .topbar nav a:hover {
                color: #000;
                text-decoration: underline;
                cursor: pointer;
            }

    .body-content {
        flex: 1;
        padding: 40px 50px;
        background: linear-gradient(135deg, #1e1e1e, #2e2e2e);
        overflow-y: auto;
    }

    .footer {
        background-color: #222;
        padding: 15px 30px;
        text-align: center;
        font-size: 14px;
        color: #bbb;
        user-select: none;
    }
</style>
